<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="container container-fluid">
    <a class="navbar-brand" href="<%= root_path %>">
      <%= image_tag "Instalist_LogoHorizontal.png" %>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
             <%= link_to "Minhas listas", my_lists_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_list_path %>">Criar lista</a>
          </li>
          <li class="nav-item dropdown">
              <% if current_user.profile_picture.attached? %>
              <%= cl_image_tag(current_user.profile_picture.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, aria: { haspopup: true, expanded: false }) %>
              <% else %>
              <%= image_tag('avatar_placeholder.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, aria: { haspopup: true, expanded: false }) %>
              <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="<%= edit_user_registration_path %>"> Editar perfil </a>
              <a class="dropdown-item" data-turbo-method="delete" href="<%= destroy_user_session_path %>" data-turbo-action="replace" data-turbo-frame="_top" data-turbo-url="<%= new_user_session_path %>">Log out</a>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
