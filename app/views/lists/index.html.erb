      <div class="hs full no-scrollbar">
        <% @user_list.limit(3).each do |list| %>
          <% @list_item.last(1).each do |item| %>
              <% random_item = @list_item.sample %>
              <div class="card-category" style="background-image: url(<%= random_item.media["media_type"] == "IMAGE" ? random_item.media["media_url"] : random_item.media["thumbnail_url"] %>)">
