<div class="container mt-3" data-controller="media-list">

  <div id="#list-name-input">
    <h2>Qual será o nome da sua lista?</h2>
    <%= simple_form_for @list do |f| %>
        <%= f.input :name,
                    input_html: {data: {media_list_target: "input"}},
                    label_html: {hidden: true} %>
    <% end %>
  </div>

  <div id="medias-selector-input">
    <div class="d-flex justify-content-between align-items-center my-3">
      <h2>Selecione as publicações</h2>
      <div class="btn btn-primary" data-action="click->media-list#createList">
        Adicionar postagens
      </div>
    </div>

    <div class="media-list" data-media-list-target="list">
      <% @medias.each do |media| %>
          <%= render partial: "shared/media_card", locals: {media: media} %>
      <% end %>
    </div>
  </div>

</div>
