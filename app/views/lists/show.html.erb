<div class="container after-navbar">
  <div class="text-center">
    <% if @list.user.profile_picture.attached? %>
      <%= cl_image_tag(@list.user.profile_picture.key, class: "avatar-mylists") %>
   <% else %>
      <%= image_tag('avatar_placeholder.png', class: "avatar-mylists mt-5") %>
    <% end %>
    <h4 class="mt-3">Lista criada por <%=link_to "@#{@list.items.first.media['username']}", "https://www.instagram.com/#{@list.items.first.media['username']}", id:"gradient", target: "_blank" %></h4>
  </div>

  <div class="mt-1">
    <h1 class="text-center mylist-h1"><%= @list.name %></h1>
  </div>

  <div class="media-list mb-3">
    <% @list.items.each do | item |  %>
      <a href="<%= item.media["permalink"] %>">
        <% img_url = (item.media["media_type"] == "VIDEO") ? item.media["thumbnail_url"] : item.media["media_url"] %>
        <div class="media-card" <%= image_url = img_url %>
       style="background-image:url(<%= image_url %>)">
        </div>
      </a>
    <% end %>
  </div>
  <%= link_to "voltar", root_path, class: "general-button" %>
  <%= link_to "favoritar essa lista", list_favorites_path(@list), class: "general-button", data: {turbo_method: :post} %>
  <%= link_to "desfavoritar essa lista", list_favorite_path(@list), class: "general-button", data: {turbo_method: :delete, turbo_confirm: "Tem certeza que quer desfavoritar a lista?"} %>
  <% if @list.user == @user %>
    <%= link_to "editar essa lista", edit_list_path(@list), class: "general-button" %>
    <%= link_to 'apagar esta lista', list_path(@list), class: "general-button", data: {turbo_method: :delete, turbo_confirm: "Tem certeza que quer deletar a lista?"} %>
  <% end %>
</div>
