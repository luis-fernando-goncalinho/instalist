<div class="container">
  <p> Lista de ID=<%= @list.id  %> foi criada!</p>
  <p>Nome da lista: <%= @list.name %> </p>

  <div class="media-list mb-3">

    <% @list.items.each do | item |  %>
      <a href="<%= item.media["permalink"] %>">
        <div class="media-card" <%= image_url = (item.media["media_type"] == "IMAGE") ? item.media["media_url"] : item.media["thumbnail_url"] %>
       style="background-image:url(<%= image_url %>)">
        </div>
      </a>
    <% end %>

  </div>
  <%= link_to "voltar", root_path, class: "general-button" %>
  <%= link_to "editar essa lista", edit_list_path, class: "general-button" %>
  <%= link_to 'apagar esta lista', list_path(@list), class: "general-button", data: {turbo_method: :delete, turbo_confirm: "Tem certeza que quer deletar a lista?"} %>
</div>
