<div class="background-login">
  <div class="login container">
    <div class="row d-flex align-items-center">
      <div class="box-text-login col-lg-9 col-md-12">
      <p>crie listas de <br>sugest√µes de que <br>todos precisam</p>
      </div>
      <div class="box-form-login col-lg-3 col-md-12">
        <div class="box-form-name">
          <%= image_tag "Instalist_LogoSquare.png" %>
          <h2>Bem-vindo(a) ao Instalist</h2>
        </div>
        
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit,
                          "Entrar",
                          class: "general-button" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
